<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/sage_dark"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_marginEnd="12dp"/>
        <!--Layout item_task.xml menggunakan CardView sebagai container utama dengan sudut melengkung 12dp, elevasi 2dp,
        margin horizontal 16dp dan margin bawah 12dp untuk memberikan jarak antar item. Di dalamnya terdapat LinearLayout horizontal
        dengan padding 16dp yang berisi CheckBox dengan id cbTask berwarna hijau sage dan diperbesar 1.2 kali dari ukuran normal
        untuk memudahkan interaksi pengguna. -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvMatkul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pemrograman Mobile"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/sage_dark"/>

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Des 2025"
                    android:textSize="12sp"
                    android:textColor="#EF4444"
                    android:background="#FEE2E2"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"/>
            </LinearLayout>
            <!-- Bagian ini berisi LinearLayout vertikal dengan layout_weight 1 untuk mengisi sisa ruang di samping checkbox.
            Di dalamnya terdapat LinearLayout horizontal yang memuat TextView tvMatkul untuk menampilkan nama mata kuliah dengan
            warna hijau sage dan tvDeadline untuk menampilkan tanggal deadline dengan warna merah (#EF4444) serta background merah muda
             (#FEE2E2) sebagai penanda visual yang mencolok.-->

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Tugas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_brown"/>

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat tugas..."
                android:textSize="13sp"
                android:textColor="@color/text_brown"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <!-- berisi dua TextView yaitu tvJudul untuk menampilkan judul tugas dengan ukuran 16sp dan style bold,
            serta tvDeskripsi untuk menampilkan keterangan singkat dengan ukuran 13sp, maksimal 2 baris, dan ellipsize end untuk
            memotong teks yang terlalu panjang dengan tanda titik tiga.-->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>